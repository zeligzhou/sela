extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if stocks && stocks.length > 0
            each item in stocks
              .col-md-2
                .thumbnail
                  div
                    h3 #{item.summary}
                    .caption
                      h5 #{item.title}
                    p: a.btn.btn-primary(href="/stock/#{item._id}",role="button") 查看详情
      ul.pagination
        - for (var i = 0; i < totalPage; i++ ) {
          - if(currentPage == (i+1)){
              li.active
                span #{currentPage}
          - }else{
              li
                a(href="/results?#{query}&page=#{i}") #{i+1}
          - }
        - }
  script(src="/requirejs/require.js",data-main="/pub/common.js")